@model e_commerce_website.Models.ShoppingCartVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    @if(Model.ListCart.Count()>0){
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <br />
                    <table class="table table-striped table-bordered" id="myTable">
                        <thead>
                            <tr>
                                <th>Images</th>
                                <th>Title</th>
                                <th>Quantity</th>
                                <th>Price (Per product)</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ListCart)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.Product.Image" width="60" />
                                    </td>

                                    <td>
                                        @item.Product.Title
                                    </td>

                                    <td>
                                        <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                                            <div class="btn-group me-2" role="group" aria-label="First group">

                                                <input type="text" style="max-width:45px" class="form-control" />
                                                <button asp-action="Decrease" asp-route-cartId="@item.Id" class="btn btn-danger"><i class="bi bi-dash-lg"></i></button>
                                                <button asp-action="Add" asp-route-cartId="@item.Id" class="btn btn-primary"><i class="bi bi-plus-lg"></i></button>
                                                <button asp-action="Remove" asp-route-cartId="@item.Id" class="btn btn-danger"><i class="bi bi-trash"></i></button>

                                            </div>
                                        </div>
                                    </td>

                                    <td>
                                        @item.Product.Price.ToString("0.00") $
                                    </td>
                                    <td>
                                        @((item.Count * item.Product.Price).ToString("0.00")) $;
                                    </td>
                                </tr>
                            }

                            <tr>
                                <td colspan="4" style="text-align:right">
                                    <strong>Total Price = </strong>
                                </td>
                                <td style="background-color:darkred">
                                    <span style="font-size:large;color:white">@Model.OrderHeader.OrderTotal.ToString("0.00") $</span>
                                </td>

                            </tr>
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-md-4">
                            <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-primary form-control">Continue Shopping</a>
                        </div>

                        <div class="col-md-4"></div>
                        <div class="col-md-4">
                            <a asp-area="Customer" asp-controller="Cart" asp-action="Summary" class="btn btn-success form-control">Complete Order</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div><p>Cart is empty!</p></div>
    }

</form>

