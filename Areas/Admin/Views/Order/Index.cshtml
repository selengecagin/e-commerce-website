@model IEnumerable<e_commerce_website.Models.OrderHeader>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="btn-group d-grid gap-2 d-md-flex justify-content-md-end" role="group" aria-label="Basic outlined example">
    <a asp-action="Pending" asp-area="Admin" asp-controller="Order" type="button" class="btn btn-outline-primary">Pending Orders</a>
    <a asp-action="Confirmed" asp-area="Admin" asp-controller="Order" type="button" class="btn btn-outline-primary">Confirmed Orders</a>
    <a asp-action="Shipped" asp-area="Admin" asp-controller="Order" type="button" class="btn btn-outline-primary">Shipped Orders</a>
    <a asp-action="Index" asp-area="Admin" asp-controller="Order" type="button" class="btn btn-outline-primary active">All Orders</a>
</div>
<br/>

<div class="container">
    <table class="table table-striped table-bordered" id="myTable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Phone Number</th>
                @if (!User.IsInRole(Other.Role_Admin))
                {
                    <th>Email</th>
                }
                <th>Order Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Surname
                    </td>
                    <td>
                        @item.PhoneNumber
                    </td>
                    <td>
                        @if (!User.IsInRole(Other.Role_Admin))
                        {
                            @item.ApplicationUser.Email
                        }
                    </td>
                    <td>
                        @item.OrderStatus
                    </td>
                    <td>
                        @if (User.IsInRole(Other.Role_Admin))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success"><i class="bi bi-pencil"></i> Edit</a>
                        }
                        else
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success"><i class="bi bi-pencil"></i> Details</a>
                        
                        } 

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

@section Scripts {
    <script type="text/javascript">
        let table = new DataTable('#myTable');
    </script>
}